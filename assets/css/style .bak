
header {
	border-bottom: solid 2px #CCC;
	background-color: #fff;
}
body {
	background-color: #DDD;

}
footer {
	background-color: #666;
	font-family: 'Georgia', Times, Times New Roman, serif;
	color: #CCC;
}
.footer {
	padding: 1%;
	border-top: solid 5px #4aaaa5;
	margin-top: 10px;
}
#name {
	color: #fff;
	background-color: #4aaaa5;
	font-family: "Times New Roman", Times, serif;
}
#nav {
	margin-top: 15px;
}
section {
	background-color: #fff;
	overflow: visible;
}
aside {
	background-color: #fff;
}
section img {
	margin-right: 10px;
}
aside a img {
	margin-right: 10px;
}

h2 {
	color: #4aaaa5;
	font-family: 'Georgia', Times, Times New Roman, serif;
	font-size: 28px;
	font-weight: bold;
	padding-bottom: 20px;
	margin-bottom: 25px;
	border-bottom: solid 2px #CCC;
}
h3 {
	color: #4aaaa5;
	font-family: 'Georgia', Times, Times New Roman, serif;
	font-size: 22px;
	font-weight: bold;
	padding-bottom: 20px;
	margin-bottom: 25px;
	border-bottom: solid 2px #CCC;
}
.imageClip {
	width: 250px;
}
.image-container {
	position: relative;
	margin-bottom: 15px;
}
.portImage {
	width: 270px;
	/*position: absolute;*/
}
.float {
	width: 270px;
	height: 50px;
	background-color: #4aaaa5;
	position: absolute;
	margin-top: -80px;
	z-index: 10;
}
.float h4 {
	color: #fff;
	font-family: "Times New Roman", Georgia, Serif;
	font-size: 22px;
	text-align: center;
	margin-top: 12px;
}
.contact input {
	width: 100%;
}
.contact textarea {
	width: 100%;
}
.contact input[type="submit"] {
	border: none;
	background-color: #4aaaa5;
	color: #fff;
	font-family: 'Arial', 'Helvetica Neue', Helvetica, sans-serif;
	font-size: 18px;
	padding: 10px 5px;
	width: 120px;
	margin-top: 15px;
}
.contact p {
	padding: 0px;
	margin: 12px 0px -10px 0px;
}
@media (max-width: 960px) and (min-width: 720px) {
	#name {
		width: 300px;
		float: left;
		margin-top: -15px;
	}

}
@media (max-width: 719px) {
	#name {
		padding: 5px 20px 15px 20px;
		/*Have seen that bootstrap margins are 15px by default*/
		margin: 0 -15px;
	}
	#nav {
		position: relative;
		margin-right: 30%;
	}
	#position {
		position: relative;
	}
}